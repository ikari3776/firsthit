<% content_for(:title, 'ログイン') %>
<div class="container mt-4">
  <h1 class="text-center mb-4">
    ログイン
  </h1>
  <%= form_with url: login_path do |f| %>
    <div class="mb-3">
      <%= f.label :'ユーザー名' %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :'パスワード' %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
      <%= link_to auth_at_provider_path(provider: :google), class: "btn btn-outline-dark d-flex align-items-center gap-2" do %>
        <i class="bi bi-google"></i>
        <span>ログイン</span>
      <% end %>
      <%= link_to "パスワードを忘れた", new_password_reset_path, class: "btn btn-link" %>
    </div>
    <% end %>
</div>
