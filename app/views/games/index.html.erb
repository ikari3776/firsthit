<h3>第<%= session[:game_round] %>/5問</h3>
<% if @random_image %>
  <%= image_tag @random_image.url, alt: "ゲーム画像", class: "img-fluid", style: "max-height: 75vh; object-fit: contain;" %>

  <%= form_with url: search_games_path, method: :get, local: true do %>
    <%= hidden_field_tag :image_id, @random_image.id %>
    <%= text_field_tag :query, params[:query], placeholder: "検索ワード" %>
    <%= submit_tag "検索", class: "btn btn-primary continue-button" %>
  <% end %>
<% else %>
  <p>画像がありません</p>
<% end %>
