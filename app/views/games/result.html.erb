<% content_for(:title, 'ゲーム結果') %>
<div class="text-center">
  <h2>ゲーム終了！お疲れさまでした！</h2>
  <p>合計得点: <strong><%= @total_score %>点</strong> !</p>

  <%= link_to "もう一度プレイする", games_path, class: "btn btn-primary" %>
  <%= link_to "ホームに戻る", root_path, class: "btn btn-secondary" %>
  
  <% tweet_text = "画像検索ゲーム「FIRST HIT」で#{@total_score} 点獲得したよ！ みんなも挑戦しよう！" %>
  <% tweet_url = "https://first-hit.com?v=5" %> 
  <% hashtags = "FIRSTHIT,画像検索ゲーム" %>

<style>
  .x-share-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color:
    color:
    font-weight: bold;
    font-size: 16px;
    border: none;
    border-radius: 8px;
    padding: 8px 8px;
    width: 150px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    text-decoration: none;
  }

  .x-share-button img {
    width: 18px;
    height: 18px;
    margin-right: 10px;
  }
</style>

<a href="https://twitter.com/intent/tweet?text=<%= CGI.escape(tweet_text) %>&url=<%= CGI.escape(tweet_url) %>&hashtags=<%= CGI.escape(hashtags) %>" 
  target="_blank" 
  rel="noopener noreferrer"
  class="x-share-button btn btn-info">
