<% content_for(:title, 'ゲーム結果') %>
<div class="text-center">
  <h2>ゲーム終了！お疲れさまでした！</h2>
  <div class="alert alert-info mx-auto text-center shadow-sm mb-3" style="max-width: 300px;">
    <h5>合計得点: <strong><%= @total_score %>点</strong> !</h5>
  </div>

  <% tweet_text = "画像検索ゲーム「FIRST HIT」で#{@total_score} 点獲得したよ！ みんなも挑戦しよう！" %>
  <% tweet_url = "https://first-hit.com?v=5" %> 
  <% hashtags = "FIRSTHIT,画像検索ゲーム" %>

  <a href="https://twitter.com/intent/tweet?text=<%= CGI.escape(tweet_text) %>&url=<%= CGI.escape(tweet_url) %>&hashtags=<%= CGI.escape(hashtags) %>" 
    target="_blank" 
    rel="noopener noreferrer"
    class="x-share-button btn btn-info">
    <img src="https://upload.wikimedia.org/wikipedia/commons/5/53/X_logo_2023_original.svg" alt="Xロゴ">
    で共有
  </a>

  <% if @new_badges.present? %>
    <div class="bg-warning p-3 rounded my-3 border mx-auto" style="max-width: 600px;">
      <strong>新しい称号を獲得しました！</strong>
      
      <div class="mt-2">
        <% @new_badges.each do |badge| %>
          <div><%= badge.name %></div>
        <% end %>
      </div>

      <div class="text-center mt-3">
        <%= link_to '称号ページへ', badges_path, class: 'btn btn-sm btn-danger' %>
      </div>
    </div>
  <% end %>
</div>
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5700093288244455"
    crossorigin="anonymous"></script>
